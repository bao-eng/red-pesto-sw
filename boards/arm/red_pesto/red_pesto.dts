/dts-v1/;

#include "red_pesto-common.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	leds {
		compatible = "gpio-leds";
		led_green: led_green {
			gpios = <&gpio0 2 GPIO_ACTIVE_HIGH>;
			label = "LED Green";
		};
		led_red: led_red {
			gpios = <&gpio0 3 GPIO_ACTIVE_HIGH>;
			label = "LED Red";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 9 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push Button 1";
			zephyr,code = <INPUT_KEY_0>;
		};
	};

	pwm_leds {
	compatible = "pwm-leds";
		pwm_led0: pwm_led_0 {
			status = "okay";
			pwms = <&pwm 13 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "PWM_LED";
		};
	};

	vbatt: vbatt {
		compatible = "voltage-divider";
		io-channels = <&adc 2>;
		output-ohms = <16000>;
		full-ohms = <(15000 + 16000)>;
	};

	aliases {
		led-green = &led_green;
		led-red = &led_red;
		pwm-led0 = &pwm_led0;
	};

	zephyr,user {
		io-channels = <&adc 0>, <&adc 1>;
	};
};
